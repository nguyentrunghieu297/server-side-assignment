<div class='container mt-5'>
  <div class='d-flex justify-content-between my-4'>
    <h2>Brand Management</h2>
    <a href='/admin/brand/create' class='btn btn-success'>Add brand</a>
  </div>
  <table class='table table-bordered'>
    <thead>
      <tr>
        <th>#</th>
        <th>Brand Name</th>
        <th>Create At</th>
        <th>Update At</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      {{#each brands}}
        <tr>
          <td>{{sum @index 1}}</td>
          <td>{{this.brandName}}</td>
          <td>{{this.createdAt}}</td>
          <td>{{this.updatedAt}}</td>
          <td class='d-flex justify-content-around align-items-center gap-2'>
            <a
              href='/admin/brand/{{this._id}}/update'
              class='btn btn-primary btn-sm'
            >Edit</a>
            <form
              action='/admin/brand/{{this._id}}/delete?_method=DELETE'
              method='POST'
              class='mt-3'
            >
              <input type='hidden' name='_method' value='DELETE' />
              <button
                type='submit'
                class='btn btn-danger btn-sm'
              >Delete</button>
            </form>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>