<div class='container mt-5'>
  <h2>Add Brand</h2>
  <form action='/admin/brand/store' method='POST'>
    <div class='mb-3'>
      <label for='name' class='form-label'>Name</label>
      <input
        type='text'
        class='form-control'
        id='name'
        name='brandName'
        required
      />
    </div>
    <div class='d-flex justify-content-end g-2'>
      <a href='/admin/brand' class='btn btn-danger mx-2'>Cancel</a>
      <button type='submit' class='btn btn-primary'>Done</button>
    </div>
  </form>
</div>